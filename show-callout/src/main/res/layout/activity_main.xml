<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.esri.arcgisruntime.samples.showcallout.MainActivity">

    <!-- MapView -->
    <com.esri.arcgisruntime.mapping.view.MapView
        android:id="@+id/mapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    </com.esri.arcgisruntime.mapping.view.MapView>



    <ImageView
    android:id="@+id/outside_imageview"
    android:layout_width="120px"
    android:layout_height="120px"
    android:layout_alignBottom="@id/mapView"
    android:layout_alignLeft="@id/mapView"
    android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/pointer_imageview"
        android:layout_width="120px"
        android:layout_height="220px"
        android:paddingBottom="100px"
        android:layout_alignBottom="@id/mapView"
        android:layout_alignLeft="@id/mapView"
        android:scaleType="fitXY"
        android:interpolator="@android:anim/bounce_interpolator"></ImageView>

    <ImageView
        android:id="@+id/splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/mapView"
        android:layout_alignLeft="@id/mapView"
        android:layout_alignTop="@id/mapView"
        android:layout_alignRight="@id/mapView"
        android:scaleType="fitXY"
        android:src="@drawable/splash"/>

</RelativeLayout>
